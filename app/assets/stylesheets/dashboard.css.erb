img.img {
  width: 100%;
}

/* Lightbox Columns */
.lightbox .box {
  width:25%;
  display:inline-block;
  float:left;
}


/* Call to Action Section */
.call-to-action {
    text-align: center;
    padding-top: 1.3rem;
    padding-bottom: 0.5rem;
}

/* Join Section */
#join {
    max-width: 70%;
    margin: 30px auto;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

#join i {
  font-size:48px;
  margin-bottom: 1rem;
}

 /* Search Section */
#search {
  text-align:center;
}

#search .form-control {
  min-width:400px;;
  text-align:center;
  padding-bottom:.4rem;
  font-size:24px;
}

#search .form-control:hover {
  border-bottom: 3px solid #ed5495!important;
}

#search .form-control:focus {
  border-bottom: 3px solid #08bce4!important;
}


 /* About Section*/
 #about {
   max-width:800px;
   margin:0 auto;
   padding:2em 0;
 }
 #about h2 {
   text-align:center;
 }

 #about .img img {
   max-width:100px;
   margin:0 auto;
   display:block;
 }



 /* Navbar */
 .navbar {
   box-shadow:none!important;
 }
 .navbar .fa-search {
  color:#fff!important;
}

.navbar.top-nav-collapse .fa-search {
  color: #1c2330!important;
}

/* Log in / out */
  .right-navi {
   float:right;
   margin-right:2rem;
 }

/* Slider Content */
.carousel-item:nth-child(1) {
    background-image: url(<%= asset_path 'hwmp-stock-3.jpg' %>)!important;
    background-repeat: no-repeat;
    background-size: cover;
}

.carousel-item:nth-child(2) {
    background-image: url(<%= asset_path 'hwmp-stock-2.jpg' %>)!important;
    background-repeat: no-repeat;
    background-size: cover;
}

.carousel-item:nth-child(3) {
    background-image: url(<%= asset_path 'hwmp-stock-5.jpg' %>)!important;
    background-repeat: no-repeat;
    background-size: cover;
}


 .button-submit {
   background: none;
   background-color: none;
   border: none;
 }

